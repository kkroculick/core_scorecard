<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <sql-query name="getEmpByLTA">
        <![CDATA[
            select * from employee where title = 'LTA'
        ]]>
    </sql-query>
    <sql-query name="getEmpByPFA">
        <![CDATA[
            select * from employee where title = 'PFA'
        ]]>
    </sql-query>
    <sql-query name="getPlatform">
        <![CDATA[
            select * from platform
        ]]>
    </sql-query>
    <sql-query name="getApplication">
        <![CDATA[
            select application_name, application_id from v_aim_owner where application_name like '%' || :aim ||'%' or  application_id like '%' || :aim||'%'
        ]]>
    </sql-query>
</hibernate-mapping>